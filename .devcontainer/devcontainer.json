{
    "name": "Julia Dev Environment",
    "image": "ghcr.io/julia-vscode/julia-devcontainer",
    "postCreateCommand": "julia --project=. -e 'using Pkg; Pkg.instantiate(); Pkg.precompile()'",
    "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "julia.executionEnvironment": "workspace",
        "julia.useRevise": true
    },
    "extensions": [
        "julialang.language-julia",
        "ms-toolsai.jupyter",
        "github.vscode-pull-request-github"
    ],
    "forwardPorts": [8888],
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    }
}
