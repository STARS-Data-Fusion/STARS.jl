{
    "name": "Julia Dev Environment",
    "image": "julia:1.10",
    "postCreateCommand": "julia --project=. -e 'using Pkg; Pkg.instantiate(); Pkg.precompile()'",
    "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "julia.executionEnvironment": "workspace",
        "julia.useRevise": true,
        "julia.environmentPath": "/workspaces/STARS.jl"
    },
    "extensions": [
        "julialang.language-julia",
        "ms-toolsai.jupyter",
        "github.vscode-pull-request-github"
    ],
    "forwardPorts": [8888],
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "workspaceFolder": "/workspaces/STARS.jl",
    "customizations": {
        "codespaces": {
            "openFiles": [
                "/workspaces/STARS.jl/examples/STARS_fusion_example.ipynb"
            ]
        },
        "vscode": {
            "settings": {
                "jupyter.notebookFileRoot": "/workspaces/STARS.jl/examples",
                "files.autoSave": "onWindowChange"
            }
        }
    }
}
